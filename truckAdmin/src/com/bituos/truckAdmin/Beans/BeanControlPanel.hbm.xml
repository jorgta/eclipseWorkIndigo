<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC

"-//Hibernate/Hibernate Mapping DTD//EN"

"http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<hibernate-mapping>
   <class name="com.bituos.truckAdmin.Beans.BeanControlPanel" table="control_panel">
       <id name="id" type="integer" column="ID" unsaved-value="-1" >
          <generator class="increment"/>
       </id>

       <property name="email" column="EMAIL" type="string"  not-null="true"/>
       <property name="server" column="SERVER" type="string"  not-null="true"/>
       <property name="user_name" column="user_name" type="string"  not-null="true"/>
       <property name="password" column="password" type="string"  not-null="true"/>
       <property name="is_secure" column="is_secure" type="string"  not-null="true"/>
       <property name="email_personalization" column="email_personalization" type="string"  not-null="true"/>
       <property name="path_server" column="path_server" type="string"  not-null="false"/>
       <property name="path_www" column="path_www" type="string"  not-null="false"/>
       <property name="hosting_server_name" column="hosting_server_name" type="string"  not-null="false"/>

   </class>
</hibernate-mapping>


